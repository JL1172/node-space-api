generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int                @id @default(autoincrement())
  created_at       DateTime?          @default(now())
  email            String             @unique
  username         String             @unique
  password         String
  first_name       String
  last_name        String
  age              Int
  VerificationCode VerificationCode[]
  Customer         Customer[]
  Message          Message[]
  Todo             Todo[]
  Project          Project[]
  GeneralTodo      GeneralTodo[]
  ProjectTodo      ProjectTodo[]
}

model VerificationCode {
  id                Int       @id @default(autoincrement())
  verification_code String
  user_email        String
  user              User      @relation(fields: [user_email], references: [email])
  expiration_date   DateTime
  created_at        DateTime? @default(now())
  is_valid          Boolean?  @default(true)

  @@unique([user_email, verification_code])
}

model JwtToken {
  id              Int       @id @default(autoincrement())
  token           String    @unique
  expiration_time DateTime
  created_at      DateTime? @default(now())
}

//need to add project, invoice relationships 
model Customer {
  id          Int       @id @default(autoincrement())
  full_name   String
  email       String
  address     String
  phoneNumber String
  user_id     Int
  user        User      @relation(fields: [user_id], references: [id])
  created_at  DateTime? @default(now())
  updated_at  DateTime? @updatedAt()
  Message     Message[]
  Todo        Todo[]
  Project     Project[]

  @@unique([email, user_id])
  @@unique([address, user_id])
  @@unique([phoneNumber, user_id])
  @@unique([full_name, user_id])
}

model Message {
  id                   Int            @id @default(autoincrement())
  message_subject      String
  message_text         String
  message_media        MessageMedia[]
  message_sender_id    Int
  message_sender       User           @relation(fields: [message_sender_id], references: [id])
  message_recipient_id Int
  message_recipient    Customer       @relation(fields: [message_recipient_id], references: [id])
  created_at           DateTime?      @default(now())
}

model MessageMedia {
  id         Int       @id @default(autoincrement())
  mime_type  String
  filename   String
  size       Int
  data       Bytes
  message_id Int
  message    Message   @relation(fields: [message_id], references: [id])
  created_at DateTime? @default(now())
}

model Project {
  id                  Int              @id @default(autoincrement())
  user_id             Int
  user                User             @relation(fields: [user_id], references: [id])
  customer_id         Int
  customer            Customer         @relation(fields: [customer_id], references: [id])
  todos               ProjectTodo[]
  project_title       String
  project_description String
  budget              Int
  project_expenses    ProjectExpense[]
  completed           Boolean?         @default(false)
  estimated_end_date  DateTime?
  actual_end_date     DateTime?
  estimated_revenue   Int
  actual_revenue      Int?
  created_at          DateTime?        @default(now())
  updated_at          DateTime?        @updatedAt()
}

model ProjectExpense {
  id                    Int                    @id @default(autoincrement())
  project_id            Int
  project               Project                @relation(fields: [project_id], references: [id], onDelete: Cascade)
  monetary_amount       Int
  expense_description   String
  expense_documentation ExpenseDocumentation[]
  created_at            DateTime?              @default(now())
  updated_at            DateTime?              @updatedAt()
}

model ExpenseDocumentation {
  id                 Int            @id @default(autoincrement())
  project_expense_id Int
  project_expense    ProjectExpense @relation(fields: [project_expense_id], references: [id], onDelete: Cascade)
  file               Bytes
  file_name          String
  mime_type          String
  size               Int
  created_at         DateTime?      @default(now())
}

model Todo {
  id               Int       @id @default(autoincrement())
  customer_id      Int
  customer         Customer  @relation(fields: [customer_id], references: [id])
  user_id          Int
  user             User      @relation(fields: [user_id], references: [id])
  completed        Boolean?  @default(false)
  todo_description String
  todo_title       String
  created_at       DateTime? @default(now())
  updated_at       DateTime? @updatedAt()
}

model GeneralTodo {
  id               Int       @id @default(autoincrement())
  user_id          Int
  user             User      @relation(fields: [user_id], references: [id])
  completed        Boolean?  @default(false)
  todo_description String
  todo_title       String
  created_at       DateTime? @default(now())
  updated_at       DateTime? @updatedAt()
}

model ProjectTodo {
  id               Int       @id @default(autoincrement())
  project_id       Int
  project          Project   @relation(fields: [project_id], references: [id])
  user_id          Int
  user             User      @relation(fields: [user_id], references: [id])
  completed        Boolean?  @default(false)
  todo_description String
  todo_title       String
  created_at       DateTime? @default(now())
  updated_at       DateTime? @updatedAt()
}
